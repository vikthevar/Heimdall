# Heimdall Environment Configuration - FREE APIS ONLY
# Copy this file to .env and customize as needed

# Local AI Configuration (FREE)
OLLAMA_MODEL=llama3.2:3b
OLLAMA_HOST=http://localhost:11434
WHISPER_MODEL=base  # Options: tiny, base, small, medium, large

# Local TTS Configuration (FREE)
TTS_ENGINE=pyttsx3
TTS_VOICE_INDEX=0  # 0 for default system voice
TTS_RATE=200  # Words per minute
TTS_VOLUME=0.9  # 0.0 to 1.0

# Local Storage Configuration (FREE)
DATABASE_PATH=./data/heimdall.db
SCREENSHOTS_PATH=./data/screenshots
LOGS_PATH=./data/logs

# Application Settings
SCREENSHOT_INTERVAL=30
LOG_LEVEL=INFO
DEBUG_MODE=false

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024
MICROPHONE_DEVICE_INDEX=0

# Screen Analysis Settings
OCR_CONFIDENCE_THRESHOLD=0.7
UI_DETECTION_CONFIDENCE=0.8
SCREENSHOT_QUALITY=95

# Performance Settings
MAX_CONCURRENT_REQUESTS=5
API_TIMEOUT_SECONDS=30
CACHE_TTL_SECONDS=300

# Privacy and Security
ENCRYPT_SCREENSHOTS=true
LOCAL_PROCESSING_ONLY=false
ANONYMIZE_LOGS=true

# Development Settings
ENABLE_TELEMETRY=false
MOCK_APIS=false
TEST_MODE=false