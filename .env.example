# Heimdall Environment Configuration
# Copy this file to .env and fill in your actual API keys

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
WHISPER_MODEL=whisper-1

# ElevenLabs Text-to-Speech
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_preferred_voice_id
VOICE_MODEL=eleven_monolingual_v1

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=heimdall-screenshots
DYNAMODB_TABLE_NAME=heimdall-logs

# Application Settings
SCREENSHOT_INTERVAL=30
LOG_LEVEL=INFO
DEBUG_MODE=false

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024
MICROPHONE_DEVICE_INDEX=0

# Screen Analysis Settings
OCR_CONFIDENCE_THRESHOLD=0.7
UI_DETECTION_CONFIDENCE=0.8
SCREENSHOT_QUALITY=95

# Performance Settings
MAX_CONCURRENT_REQUESTS=5
API_TIMEOUT_SECONDS=30
CACHE_TTL_SECONDS=300

# Privacy and Security
ENCRYPT_SCREENSHOTS=true
LOCAL_PROCESSING_ONLY=false
ANONYMIZE_LOGS=true

# Development Settings
ENABLE_TELEMETRY=false
MOCK_APIS=false
TEST_MODE=false